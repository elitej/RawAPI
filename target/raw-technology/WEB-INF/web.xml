<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!--Servlets-->
  <servlet>
    <servlet-name>defaultController</servlet-name>
    <servlet-class>home.elitej.controller.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>defaultController</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>homeController</servlet-name>
    <servlet-class>home.elitej.controller.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>homeController</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>imageController</servlet-name>
    <servlet-class>home.elitej.controller.ImageController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>imageController</servlet-name>
    <url-pattern>/upload_screen/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>testController</servlet-name>
    <servlet-class>home.elitej.controller.TestController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>testController</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>restaurantsController</servlet-name>
    <servlet-class>home.elitej.controller.RestaurantsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>restaurantsController</servlet-name>
    <url-pattern>/restaurants</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ratingController</servlet-name>
    <servlet-class>home.elitej.controller.RatingController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ratingController</servlet-name>
    <url-pattern>/rating</url-pattern>
  </servlet-mapping>

  <!--Servlets-->

</web-app>
