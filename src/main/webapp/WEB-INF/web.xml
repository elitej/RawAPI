  <servlet>
    <servlet-name>homeController</servlet-name>
    <servlet-class>home.elitej.controller.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>homeController</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>imageController</servlet-name>
    <servlet-class>home.elitej.controller.ImageController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>imageController</servlet-name>
    <url-pattern>/upload_screen/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>testController</servlet-name>
    <servlet-class>home.elitej.controller.TestController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>testController</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>restaurantsController</servlet-name>
    <servlet-class>home.elitej.controller.RestaurantsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>restaurantsController</servlet-name>
    <url-pattern>/restaurants</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ratingController</servlet-name>
    <servlet-class>home.elitej.controller.RatingController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ratingController</servlet-name>
    <url-pattern>/rating</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>loginController</servlet-name>
    <servlet-class>home.elitej.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>registryController</servlet-name>
    <servlet-class>home.elitej.controller.RegistrationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registryController</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>restInfoController</servlet-name>
    <servlet-class>home.elitej.controller.RestaurantInfoController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>restInfoController</servlet-name>
    <url-pattern>/restaurant-info/*</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>pathToXmlConfig</param-name>
    <param-value>bean-config.xml</param-value>
